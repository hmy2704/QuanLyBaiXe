
CREATE TABLE IF NOT EXISTS VaiTro (
    VaiTroId INT AUTO_INCREMENT PRIMARY KEY,
    TenVaiTro VARCHAR(50) NOT NULL UNIQUE
);

CREATE TABLE IF NOT EXISTS NhatKyHeThong (
    NhatKyId INT AUTO_INCREMENT PRIMARY KEY,
    NguoiDungId INT,
    HanhDong VARCHAR(255),
    ThoiGian DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (NguoiDungId) REFERENCES NguoiDung(NguoiDungId)
);
 CREATE TABLE IF NOT EXISTS PhanQuyen (
    PhanQuyenId INT AUTO_INCREMENT PRIMARY KEY,
    TenQuyen VARCHAR(50) NOT NULL UNIQUE,
    MoTa VARCHAR(255)
);
CREATE TABLE IF NOT EXISTS NhanVien (
    NhanVienId INT AUTO_INCREMENT PRIMARY KEY,
    HoTen VARCHAR(100) NOT NULL,
    SoDienThoai VARCHAR(15),
    ChucVu VARCHAR(50),
    TrangThai BOOLEAN DEFAULT TRUE
);
CREATE TABLE IF NOT EXISTS TaiKhoan (
    TaiKhoanId INT AUTO_INCREMENT PRIMARY KEY,
    TenDangNhap VARCHAR(50) NOT NULL UNIQUE,
    MatKhau VARCHAR(255) NOT NULL,
    NhanVienId INT NOT NULL,
    PhanQuyenId INT NOT NULL,
    TrangThai BOOLEAN DEFAULT TRUE,
    FOREIGN KEY (NhanVienId) REFERENCES NhanVien(NhanVienId),
    FOREIGN KEY (PhanQuyenId) REFERENCES PhanQuyen(PhanQuyenId)
);
